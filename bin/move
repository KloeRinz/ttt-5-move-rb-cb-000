#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " ", " "]
input = gets.strip

input_to_index(input)
index = (input.to_i) - 1
move(board, index, value="X")
board[index] = value
display_board(board)

puts "Where would you like to go?"
input_to_index(input)
index = (input.to_i) - 1
move(board, index, value="O")
board[index] = value
display_board(board)

